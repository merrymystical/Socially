<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="8dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/maincam"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#A84C44"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/reel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/reelsmain"
            android:layout_toStartOf="@id/ivDM"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/ivDM"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/sharetopmain"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"/>
    </RelativeLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Stories row -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:padding="4dp"
                android:paddingStart="14dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Example story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:src="@drawable/loginpfp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Your Story"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pfpmain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="karennne"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pfpmain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="zackjohn"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pfpmain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="kieron_d"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pfpmain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="zackjohn2"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pfpmain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="craige_"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/postProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/loginpfp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/postUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l "
                        android:drawableEnd="@drawable/vermain"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/postProfile"
                        android:layout_marginStart="8dp"
                        android:layout_alignTop="@id/postProfile" />

                    <TextView
                        android:id="@+id/postLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textColor="#000000"
                        android:layout_below="@id/postUsername"
                        android:layout_toEndOf="@id/postProfile"
                        android:layout_marginStart="8dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/postMenu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/optionsmain"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="436dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mainimage" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/leftIcons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/likemain" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/commentmain"
                            android:layout_marginStart="12dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sharepostmain"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/postscroll"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/optionsmain"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Save (rightmost) -->
                    <ImageView
                        android:id="@+id/savemain"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/savemain"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- Likes -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:padding="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="The game in Japan was amazing and I want to share some photos"
                        android:textColor="#000000"
                        app:layout_constraintStart_toEndOf="@id/tvUser"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvUser"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:layout_marginRight="17dp"
            android:src="@drawable/homebottommain"/>
        <ImageView
            android:id="@+id/bottomsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottomsearch"
            android:clickable="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottomadd" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottomlike" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottompfp" />

    </LinearLayout>

</LinearLayout>
